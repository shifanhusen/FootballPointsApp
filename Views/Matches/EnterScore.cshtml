@model FootballPointsApp.ViewModels.EnterScoreViewModel

@{
    ViewData["Title"] = "Enter Score";
}

<div class="max-w-lg mx-auto bg-white rounded-lg shadow-md overflow-hidden">
    <div class="px-6 py-4 bg-primary border-b border-gray-200">
        <h2 class="text-xl font-bold text-white">Enter Match Score</h2>
        <p class="text-primary-light text-sm mt-1">Match Date: @Model.MatchDate.ToShortDateString()</p>
    </div>
    
    <div class="p-6">
        <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6">
            <div class="flex">
                <div class="flex-shrink-0">
                    <i class="bi bi-exclamation-triangle text-yellow-400"></i>
                </div>
                <div class="ml-3">
                    <p class="text-sm text-yellow-700">
                        Warning: Saving the score will calculate points for all players and finalize the match.
                    </p>
                </div>
            </div>
        </div>

        <form asp-action="EnterScore">
            <input type="hidden" asp-for="MatchId" />
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-4"></div>
            
            <div class="grid grid-cols-2 gap-4 mb-6">
                <div>
                    <label asp-for="TeamAGoals" class="block text-sm font-medium text-gray-700 mb-1">Team A Goals</label>
                    <input asp-for="TeamAGoals" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50 text-center text-lg font-bold" type="number" min="0" />
                    <span asp-validation-for="TeamAGoals" class="text-red-600 text-xs mt-1"></span>
                </div>
                <div>
                    <label asp-for="TeamBGoals" class="block text-sm font-medium text-gray-700 mb-1">Team B Goals</label>
                    <input asp-for="TeamBGoals" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50 text-center text-lg font-bold" type="number" min="0" />
                    <span asp-validation-for="TeamBGoals" class="text-red-600 text-xs mt-1"></span>
                </div>
            </div>
            
            <div class="flex items-center justify-between">
                <a asp-action="Index" class="text-sm text-gray-600 hover:text-gray-900 font-medium">Cancel</a>
                <input type="submit" value="Save & Calculate Points" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 cursor-pointer" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
