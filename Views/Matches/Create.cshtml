@model FootballPointsApp.Models.Match

@{
    ViewData["Title"] = "Create Match";
}

<div class="max-w-lg mx-auto bg-white rounded-lg shadow-md overflow-hidden">
    <div class="px-6 py-4 bg-primary border-b border-gray-200">
        <h2 class="text-xl font-bold text-white">Create New Match</h2>
    </div>
    
    <div class="p-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-4"></div>
            
            <div class="mb-4">
                <label asp-for="MatchDate" class="block text-sm font-medium text-gray-700 mb-1">Match Date & Time</label>
                <input asp-for="MatchDate" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50" type="datetime-local" />
                <span asp-validation-for="MatchDate" class="text-red-600 text-xs mt-1"></span>
            </div>
            
            <div class="mb-4">
                <label asp-for="Location" class="block text-sm font-medium text-gray-700 mb-1">Location</label>
                <input asp-for="Location" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50" placeholder="e.g. Central Park Field 1" />
                <span asp-validation-for="Location" class="text-red-600 text-xs mt-1"></span>
            </div>
            
            <div class="mb-4">
                <label asp-for="Notes" class="block text-sm font-medium text-gray-700 mb-1">Notes</label>
                <input asp-for="Notes" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50" placeholder="Optional notes" />
                <span asp-validation-for="Notes" class="text-red-600 text-xs mt-1"></span>
            </div>
            
            <div class="mb-6">
                <label asp-for="RsvpDeadline" class="block text-sm font-medium text-gray-700 mb-1">RSVP Deadline</label>
                <input asp-for="RsvpDeadline" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50" type="datetime-local" />
                <span asp-validation-for="RsvpDeadline" class="text-red-600 text-xs mt-1"></span>
            </div>
            
            <div class="flex items-center justify-between">
                <a asp-action="Index" class="text-sm text-gray-600 hover:text-gray-900 font-medium">Cancel</a>
                <input type="submit" value="Create Match" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary cursor-pointer" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
