<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FutPoints</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#059669', // Emerald 600
                        'primary-dark': '#047857', // Emerald 700
                        secondary: '#1e293b', // Slate 800
                        accent: '#f59e0b', // Amber 500
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-gray-50 flex flex-col min-h-screen font-sans text-slate-800">
    <header class="bg-secondary shadow-lg sticky top-0 z-50">
        <nav class="container mx-auto px-4 py-3">
            <div class="flex justify-between items-center">
                <a class="text-2xl font-bold text-white flex items-center gap-2 hover:text-primary transition-colors" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-trophy-fill text-accent"></i>
                    <span>FUTPOINTS</span>
                </a>
                
                <!-- Mobile Menu Button -->
                <button id="mobile-menu-btn" class="md:hidden text-white focus:outline-none">
                    <i class="bi bi-list text-2xl"></i>
                </button>

                <!-- Desktop Menu -->
                <div class="hidden md:flex space-x-6">
                    <a class="text-slate-300 hover:text-white font-medium transition-colors" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="text-slate-300 hover:text-white font-medium transition-colors" asp-area="" asp-controller="Players" asp-action="Index">Players</a>
                    <a class="text-slate-300 hover:text-white font-medium transition-colors" asp-area="" asp-controller="Matches" asp-action="Index">Matches</a>
                    <a class="text-slate-300 hover:text-white font-medium transition-colors" asp-area="" asp-controller="Leaderboard" asp-action="Index">Leaderboard</a>
                </div>
            </div>
            
            <!-- Mobile Menu (Hidden by default) -->
            <div id="mobile-menu" class="hidden md:hidden mt-4 pb-2 space-y-2 border-t border-slate-700 pt-2">
                <a class="block text-slate-300 hover:text-white py-2" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                <a class="block text-slate-300 hover:text-white py-2" asp-area="" asp-controller="Players" asp-action="Index">Players</a>
                <a class="block text-slate-300 hover:text-white py-2" asp-area="" asp-controller="Matches" asp-action="Index">Matches</a>
                <a class="block text-slate-300 hover:text-white py-2" asp-area="" asp-controller="Leaderboard" asp-action="Index">Leaderboard</a>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-grow container mx-auto px-4 py-8">
        @RenderBody()
    </main>

    <footer class="bg-white border-t border-gray-200 mt-auto py-6">
        <div class="container mx-auto px-4 text-center text-gray-500 text-sm">
            &copy; 2025 - FootballPointsApp (v1.2)
        </div>
    </footer>

    <script>
        document.getElementById('mobile-menu-btn').addEventListener('click', function() {
            document.getElementById('mobile-menu').classList.toggle('hidden');
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
