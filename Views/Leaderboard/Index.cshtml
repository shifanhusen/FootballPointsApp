@model FootballPointsApp.ViewModels.LeaderboardViewModel

@{
    ViewData["Title"] = "Leaderboard";
}

<div class="mb-8">
    <h1 class="text-3xl font-bold text-secondary mb-2">Leaderboard</h1>
    <p class="text-gray-500">Rankings for @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(Model.Month) @Model.Year</p>
</div>

<partial name="_PointsLegend" />

<div class="bg-white rounded-lg shadow-md p-6 mb-8">
    <form method="get" class="grid grid-cols-1 md:grid-cols-3 gap-4 items-end">
        <div>
            <label for="year" class="block text-sm font-medium text-gray-700 mb-1">Year</label>
            <select class="form-select w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50" name="year">
                @for(int y = DateTime.Now.Year; y >= 2024; y--)
                {
                    <option value="@y" selected="@(Model.Year == y)">@y</option>
                }
            </select>
        </div>
        <div>
            <label for="month" class="block text-sm font-medium text-gray-700 mb-1">Month</label>
            <select class="form-select w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50" name="month">
                @for(int m = 1; m <= 12; m++)
                {
                    <option value="@m" selected="@(Model.Month == m)">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(m)</option>
                }
            </select>
        </div>
        <div>
            <button type="submit" class="w-full bg-primary hover:bg-primary-dark text-white font-bold py-2 px-4 rounded-md transition-colors duration-200 flex items-center justify-center gap-2">
                <i class="bi bi-filter"></i> Filter
            </button>
        </div>
    </form>
</div>

<div class="bg-white rounded-lg shadow-md overflow-hidden">
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-secondary text-white">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Rank</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Player</th>
                    <th scope="col" class="px-6 py-3 text-center text-xs font-medium uppercase tracking-wider">Matches</th>
                    <th scope="col" class="px-4 py-3 text-center text-xs font-medium uppercase tracking-wider" title="Attendance Points">Att.</th>
                    <th scope="col" class="px-4 py-3 text-center text-xs font-medium uppercase tracking-wider" title="Result Points">Res.</th>
                    <th scope="col" class="px-4 py-3 text-center text-xs font-medium uppercase tracking-wider" title="Goal Points">Goal</th>
                    <th scope="col" class="px-4 py-3 text-center text-xs font-medium uppercase tracking-wider" title="Bonus Points">Bonus</th>
                    <th scope="col" class="px-4 py-3 text-center text-xs font-medium uppercase tracking-wider text-red-300" title="Late Penalty">Late</th>
                    <th scope="col" class="px-4 py-3 text-center text-xs font-medium uppercase tracking-wider text-red-300" title="No Show Penalty">No Show</th>
                    <th scope="col" class="px-4 py-3 text-center text-xs font-medium uppercase tracking-wider text-red-300" title="No Response Penalty">No Resp</th>
                    <th scope="col" class="px-6 py-3 text-right text-xs font-bold uppercase tracking-wider">Total</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var item in Model.Entries)
                {
                    <tr class="hover:bg-gray-50 transition-colors @(item.Rank == 1 ? "bg-yellow-50" : "")">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                @if(item.Rank == 1) { <i class="bi bi-crown-fill text-accent mr-2"></i> }
                                <span class="font-bold text-gray-900">@item.Rank</span>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">@item.PlayerName</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-500">
                            @item.MatchesPlayed
                        </td>
                        <td class="px-4 py-4 whitespace-nowrap text-center text-sm text-gray-500">@item.AttendancePoints.ToString("0.#")</td>
                        <td class="px-4 py-4 whitespace-nowrap text-center text-sm text-gray-500">@item.ResultPoints.ToString("0.#")</td>
                        <td class="px-4 py-4 whitespace-nowrap text-center text-sm text-gray-500">@item.GoalPoints.ToString("0.#")</td>
                        <td class="px-4 py-4 whitespace-nowrap text-center text-sm text-green-600 font-medium">
                            @(item.BonusPoints > 0 ? "+" + item.BonusPoints.ToString("0.#") : "-")
                        </td>
                        <td class="px-4 py-4 whitespace-nowrap text-center text-sm text-red-600 font-medium">
                            @(item.LatePenaltyPoints < 0 ? item.LatePenaltyPoints.ToString("0.#") : "-")
                        </td>
                        <td class="px-4 py-4 whitespace-nowrap text-center text-sm text-red-600 font-medium">
                            @(item.NoShowPenaltyPoints < 0 ? item.NoShowPenaltyPoints.ToString("0.#") : "-")
                        </td>
                        <td class="px-4 py-4 whitespace-nowrap text-center text-sm text-red-600 font-medium">
                            @(item.NoResponsePenaltyPoints < 0 ? item.NoResponsePenaltyPoints.ToString("0.#") : "-")
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-lg font-bold text-primary">
                            @item.TotalPoints.ToString("0.#")
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
