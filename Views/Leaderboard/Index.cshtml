@model FootballPointsApp.ViewModels.LeaderboardViewModel

@{
    ViewData["Title"] = "Leaderboard";
}

<h1>Leaderboard - @Model.Month/@Model.Year</h1>

<div class="card shadow-sm border-0 mb-4">
    <div class="card-body bg-light rounded">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label for="year" class="form-label fw-bold text-secondary">Year</label>
                <select class="form-select" name="year">
                    @for(int y = DateTime.Now.Year; y >= 2024; y--)
                    {
                        <option value="@y" selected="@(Model.Year == y)">@y</option>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <label for="month" class="form-label fw-bold text-secondary">Month</label>
                <select class="form-select" name="month">
                    @for(int m = 1; m <= 12; m++)
                    {
                        <option value="@m" selected="@(Model.Month == m)">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(m)</option>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-filter"></i> Filter Leaderboard
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card shadow border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped mb-0 align-middle">
                <thead class="bg-primary text-white">
                    <tr>
                        <th class="py-3 ps-4">Rank</th>
                        <th class="py-3">Player</th>
                        <th class="py-3 text-center">Matches</th>
                        <th class="py-3 text-center" title="Wins"><i class="bi bi-trophy-fill text-warning"></i> W</th>
                        <th class="py-3 text-center" title="Draws"><i class="bi bi-dash-circle"></i> D</th>
                        <th class="py-3 text-center" title="Losses"><i class="bi bi-x-circle"></i> L</th>
                        <th class="py-3 text-center text-danger" title="Late Arrivals"><i class="bi bi-alarm"></i> Late</th>
                        <th class="py-3 text-center text-danger" title="No Shows"><i class="bi bi-person-x"></i> No-Show</th>
                        <th class="py-3 text-center text-success" title="Bonus Points"><i class="bi bi-star-fill"></i> Bonus</th>
                        <th class="py-3 pe-4 text-end fw-bold">Total Points</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Entries)
                    {
                        <tr class="@(item.Rank == 1 ? "table-warning" : "")">
                            <td class="ps-4 fw-bold">
                                @if(item.Rank == 1) { <i class="bi bi-crown-fill text-warning me-1"></i> }
                                @item.Rank
                            </td>
                            <td class="fw-medium">@item.PlayerName</td>
                            <td class="text-center">@item.MatchesPlayed</td>
                            <td class="text-center">@item.Wins</td>
                            <td class="text-center">@item.Draws</td>
                            <td class="text-center">@item.Losses</td>
                            <td class="text-center text-danger">@(item.LateArrivals > 0 ? item.LateArrivals.ToString() : "-")</td>
                            <td class="text-center text-danger">@(item.NoShows > 0 ? item.NoShows.ToString() : "-")</td>
                            <td class="text-center text-success">@(item.BonusPoints > 0 ? "+" + item.BonusPoints.ToString("0.#") : "-")</td>
                            <td class="pe-4 text-end fw-bold fs-5 text-primary">@item.TotalPoints.ToString("0.#")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
